{{#if products.length}}
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    {{#each products}}
    <div class="col">
        <div class="card shadow-sm rounded-5 mb-3">
            <img src="{{image}}" />
            <div class="card-body">
                <p class="card-text fw-bold fs-5">{{title}}</p>
                <div class="d-flex justify-content-between align-items-center">
                    <p class="p-0 m-0">{{formatDate createdAt}}</p>
                    <small class="text-muted fs-5">{{price}}.00$</small>
                </div>
            </div>
            <div class="card-footer">
                <div class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                    <a type="button" class="btn btn-outline-primary" href="/product/{{_id}}">Details</a>
                    {{#if @root.token}}
                    {{#ifequal user @root.userId}}
                    <button type="button" class="btn btn-outline-secondary">Edit</button>
                    <button type="button" class="btn btn-outline-danger">Delete</button>
                    {{/ifequal}}
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<h1>No information yet</h1>
{{/if}}