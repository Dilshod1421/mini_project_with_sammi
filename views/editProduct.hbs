<div class="w-50 mx-auto">
    <p class="fs-1">{{product.title}}</p>
    {{#if editProductError}}
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>Error!</strong>
        {{editProductError}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}
    <form action="/edit-product/{{product._id}}" method="POST">
        <div class="form-floating mb-3">
            <input value="{{product.title}}" type="text" class="form-control" name="title" id="title"
                placeholder="Title">
            <label for="title">Title</label>
        </div>
        <div class="form-floating mb-3">
            <textarea class="form-control" placeholder="Description" id="description" name="description"
                style="height: 100px">{{product.description}}</textarea>
            <label for="floatingTextarea2">Description</label>
        </div>
        <div class="form-floating mb-3">
            <input value="{{product.image}}" type="text" class="form-control" name="image" id="Image"
                placeholder="Image">
            <label for="Image">Image</label>
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text">$</span>
            <div class="form-floating">
                <input value="{{product.price}}" type="number" class="form-control" name="price" id="price"
                    placeholder="Price">
                <label for="price">Price</label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Edit product</button>
    </form>
</div>