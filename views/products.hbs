{{#if myProducts.length}}
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    {{#each myProducts}}
    <div class="col">
        <div class="card shadow-sm rounded-5 mb-3">
            <img src="{{image}}" />
            <div class="card-body">
                <p class="card-text fw-bold fs-5">{{title}}</p>
                <p class="card-text">{{description}}</p>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="d-flex gap-2 align-items-center">
                        <div class="avatar bg-primary">
                            <p>{{getFirstLatter user.firstname user.lastname}}</p>
                        </div>
                        <p class="p-0 m-0">{{user.firstname}} {{user.lastname}}</p>
                    </div>

                    <small class="text-muted fs-5">{{price}}.00$</small>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<h1>No information yet</h1>
{{/if}}